[Unit]
Description=Nohara Node Service
After=network.target nss-lookup.target
Wants=network.target

[Service]
User=root
Group=root
Type=simple
LimitAS=infinity
LimitRSS=infinity
LimitCORE=infinity
LimitNOFILE=999999
WorkingDirectory=/etc/nohara-node/
ExecStart=/usr/local/bin/nohara-node -c /etc/nohara-node/config.yml
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target